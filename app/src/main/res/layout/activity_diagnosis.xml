<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_screen_back_color"
        tools:context=".activity.MyProfileActivity">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@drawable/terms_header">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgBack"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_margin="@dimen/_6sdp"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/_8sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/back_white" />

                    <com.ar.patient.uc.SlcTextView
                        android:id="@+id/tvforgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:tag="200"
                        android:text="@string/diagnosis"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imginfo"
                        android:layout_width="@dimen/_28sdp"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/_6sdp"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/_6sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_information" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="vertical">

                    <com.ar.patient.uc.SlcTextView
                        android:id="@+id/tvfaqtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="@dimen/_8sdp"
                        android:gravity="center_vertical"
                        android:tag="100"
                        android:text="@string/please_share_you_diagnosis_here"
                        android:textAllCaps="false"
                        android:textColor="@color/color_light_blue"
                        android:textSize="@dimen/_11sdp" />

                    <com.ar.patient.uc.SlcEditTextView
                        android:id="@+id/Edtdiagnosis"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@drawable/white_curved_update_bg"
                        android:cursorVisible="true"
                        android:drawablePadding="@dimen/_8sdp"
                        android:hint="@string/diagnosis"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingStart="@dimen/_10sdp"
                        android:singleLine="true"
                        android:tag="100"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textCursorDrawable="@color/gray"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_weight="1"
                            android:background="@color/color_light_blue_new" />

                        <com.ar.patient.uc.SlcTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:tag="100"
                            android:text="SOAP Notes"
                            android:textAllCaps="false"
                            android:textColor="@color/color_light_blue"
                            android:textSize="@dimen/_11sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_weight="1"
                            android:background="@color/color_light_blue_new" />

                    </LinearLayout>


                    <com.ar.patient.uc.SlcEditTextView
                        android:id="@+id/Edtsubjectivenotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/white_curved_bg"
                        android:cursorVisible="true"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="top|left"
                        android:hint="Subjective Notes"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="4"
                        android:minHeight="@dimen/_80sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:tag="100"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textCursorDrawable="@color/gray"
                        android:textSize="@dimen/_12sdp" />

                    <com.ar.patient.uc.SlcEditTextView
                        android:id="@+id/Edtobjectivenotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/white_curved_bg"
                        android:cursorVisible="true"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="top|left"
                        android:hint="Objective Notes"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="4"
                        android:minHeight="@dimen/_80sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:tag="100"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textCursorDrawable="@color/gray"
                        android:textSize="@dimen/_12sdp" />

                    <com.ar.patient.uc.SlcEditTextView
                        android:id="@+id/Edtassessmentnotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/white_curved_bg"
                        android:cursorVisible="true"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="top|left"
                        android:hint="Assessment Notes"
                        android:imeOptions="actionNext"
                        android:maxLines="4"
                        android:inputType="text"
                        android:minHeight="@dimen/_80sdp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:tag="100"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textCursorDrawable="@color/gray"
                        android:textSize="@dimen/_12sdp" />

                    <com.ar.patient.uc.SlcEditTextView
                        android:id="@+id/Edtplannotes"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/white_curved_bg"
                        android:cursorVisible="true"
                        android:drawablePadding="@dimen/_8sdp"
                        android:gravity="top|left"
                        android:hint="Plan Notes"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:tag="100"
                        android:text=""
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray"
                        android:textCursorDrawable="@color/gray"
                        android:textSize="@dimen/_12sdp" />


                    <com.ar.patient.uc.SlcButtonView
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="@drawable/gradient_buttion"
                        android:tag="400"
                        android:text="@string/submit"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>
</layout>