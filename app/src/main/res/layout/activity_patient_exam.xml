<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/MainLayout"
        android:background="@color/patient_exam_screen_bg_color"
        tools:context=".activity.PatientExamActivity">

        <RelativeLayout
            android:id="@+id/reltop"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_margin="@dimen/_6sdp"
                android:adjustViewBounds="true"
                android:padding="@dimen/_8sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/back_white" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">

                <com.ar.patient.uc.SlcTextView
                    android:id="@+id/tvforgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:tag="200"
                    android:text="@string/patient_exam"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/Imgdot"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:visibility="visible"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dot_img" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ImgGif"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dot_img"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ImgHelp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/help" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ImgDignosis"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/docu" />

            </LinearLayout>

        </RelativeLayout>


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_above="@+id/lintip"
            android:layout_below="@+id/reltop"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relimage"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/imgMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:isScrollContainer="true" />

                <ImageView
                    android:id="@+id/imgSwipe"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="20dp"
                    android:src="@drawable/ic_rotate" />

                <LinearLayout
                    android:id="@+id/llDummy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/imgMain"
                    android:layout_alignTop="@+id/imgMain"
                    android:layout_alignRight="@+id/imgMain"
                    android:layout_alignBottom="@+id/imgMain"
                    android:orientation="vertical" />


            </RelativeLayout>


        </ScrollView>


        <!--<ZoomControls
            android:visibility="gone"
            android:id="@+id/zoomControls"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_above="@+id/lintip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>-->


        <LinearLayout
            android:id="@+id/lintip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/linchat"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/gradient_buttion_corner"
            android:minHeight="@dimen/_60sdp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="horizontal">

                <com.ar.patient.uc.SlcTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:tag="400"
                    android:text="-TIP-"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ImgCancel"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cancle" />

            </LinearLayout>

            <com.ar.patient.uc.SlcTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"
                android:tag="100"
                android:text="Tap on different parts of the patients body to examine them closer."
                android:textAllCaps="false"
                android:textColor="@color/color_light_blue"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linchat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_45sdp">

            <com.ar.patient.uc.SlcEditTextView
                android:id="@+id/EdtMessege"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="1"
                android:background="@drawable/gradient_buttion_bluee"
                android:drawablePadding="@dimen/_8sdp"
                android:drawableTint="@color/white"
                android:hint="Start patient interview..."
                android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:paddingStart="@dimen/_12sdp"
                android:singleLine="true"
                android:tag="100"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="@dimen/_10sdp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ImgSend"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/send" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@color/patient_exam_screen_bg_color"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_above="@+id/relBottom"
                android:layout_gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/chat" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:id="@+id/ImgArraow"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/down_arrow" />


                <com.ar.patient.uc.SlcTextView
                    android:layout_height="@dimen/_30sdp"
                    android:id="@+id/txtSubmit"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="@dimen/_4sdp"
                    android:background="@drawable/white_curved_bg"
                    android:gravity="center"
                    android:minWidth="@dimen/_65sdp"
                    android:tag="300"
                    android:text="@string/submit"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp">

                </com.ar.patient.uc.SlcTextView>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/relBottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:layout_alignParentBottom="true"
                android:background="@color/home_screen_back_color"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recmsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp" />

            </LinearLayout>


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/relHint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_15sdp"
            android:background="@drawable/white_curved_bg"
            android:minHeight="@dimen/_160sdp"
            android:visibility="gone">

            <com.ar.patient.uc.SlcTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentTop="true"
                android:background="@drawable/top_corner_curved"
                android:gravity="center"
                android:tag="400"
                android:text="hint"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

            <com.ar.patient.uc.SlcTextView
                android:id="@+id/txthint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:tag="300"
                android:textColor="@color/gray"
                android:textSize="@dimen/_12sdp" />


            <com.ar.patient.uc.SlcTextView
                android:id="@+id/txtHintOk"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:background="@drawable/bottom_corner_curved"
                android:gravity="center"
                android:tag="100"
                android:text="ok"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relonetimeshowHint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_240sdp"
            android:layout_centerInParent="true"
            android:background="@color/patient_exam_screen_bg_color"
            android:minHeight="@dimen/_140sdp"
            android:visibility="gone">


            <ImageView
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_160sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_7sdp"
                android:src="@drawable/manipulation" />


            <com.ar.patient.uc.SlcButtonView
                android:id="@+id/btnGotIt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/gradient_buttion"
                android:tag="400"
                android:text="got it"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />


        </RelativeLayout>


    </RelativeLayout>
</layout>