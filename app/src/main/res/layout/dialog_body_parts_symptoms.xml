<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/top_corner_curved_white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.ar.patient.uc.SlcTextView
                android:id="@+id/txttitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:tag="400"
                android:text="AR Patient"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="@dimen/_12sdp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recsymptoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" />

            <com.ar.patient.uc.SlcTextView
                android:id="@+id/txtMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:minHeight="@dimen/_80sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:tag="200"
                android:text="It seems all Okay! Please Choose another body part."
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/linbottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message"
                android:layout_marginTop="@dimen/_5sdp"
                android:clipToPadding="false"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="100">

                <com.ar.patient.uc.SlcButtonView
                    android:id="@+id/positiveBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:tag="100"
                    android:text="Ok"
                    android:textAllCaps="false"
                    android:textColor="@color/color_light_blue_new"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>